[user]
	name = Bobby R. Ward
	email = bobbyrward@gmail.com

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = nvim

[push]
	default = simple

[color]
	ui = auto

[alias]
	co = checkout
	s = status
	d = diff
	b = branch
  amend = commit --amend --no-edit
  unstage = reset HEAD --
  last = log -1 HEAD
  force-push = push origin +HEAD
